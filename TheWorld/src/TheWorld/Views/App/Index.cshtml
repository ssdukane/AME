@model IEnumerable<TheWorld.Models.Trip>

@{
    ViewBag.Title = "Home Page";
    Layout = "_Layout";
}

<div class="row">
    <div class="col-md-6">
        <h1>GoodB</h1>
        <p>This is web page and will be a fun soon!</p>

        <form>
            <div class="form-group">
                <label>Date</label>
                <input class="form-control" />
            </div>
            <div class="form-group">
                <label>Location</label>
                <input class="form-control" />
            </div>
            <div><input type="submit" value="Add" class="btn btn-success" /></div>
        </form>
    </div>
    <div class="col-md-6">
        <h2>The Map</h2>
        <ul>
            @foreach (var item in Model)
            {
                <li> @item.Name : @item.DateCreated.ToString("d")</li>
            }
        </ul>
    </div>
</div>